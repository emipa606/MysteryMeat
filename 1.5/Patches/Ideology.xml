<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence" MayRequire="Ludeon.RimWorld.Ideology">
    <!-- <success>Always</success> -->
    <operations>
      <li Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Ideology">
        <xpath>/Defs/ThoughtDef[defName = "AteHumanMeat_Abhorrent" or defName = "AteHumanMeat_Horrible" or defName = "AteHumanMeat_Disapproved"]/stages</xpath>
        <value>
          <stages>
            <li>
              <label>ate mystery meat</label>
              <description>I really didnt like the look of that meat for some reason.</description>
              <baseMoodEffect>-4</baseMoodEffect>
            </li>
          </stages>
        </value>
      </li>
      <li Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Ideology">
        <xpath>/Defs/ThoughtDef[defName = "AteHumanMeat_Know_Abhorrent" or defName = "AteHumanMeat_Know_Horrible" or defName = "AteHumanMeat_Know_Disapproved"]/stages</xpath>
        <value>
          <stages>
            <li>
              <label>ate mystery meat</label>
              <baseOpinionOffset>-1</baseOpinionOffset>
            </li>
          </stages>
        </value>
      </li>
      <li Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Ideology">
        <xpath>/Defs/ThoughtDef[defName = "ButcheredHuman_Know_Abhorrent" or defName = "ButcheredHuman_Know_Horrible" or defName = "ButcheredHuman_Know_Disapproved"]/stages</xpath>
        <value>
          <stages>
            <li>
              <label>suspicious of butcher</label>
              <description>Hey, where are they taking that corpse?</description>
              <baseMoodEffect>-1</baseMoodEffect>
            </li>
          </stages>
        </value>
      </li>
      <li Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Ideology">
        <xpath>/Defs/ThoughtDef[defName = "ButcheredHuman_Know_Abhorrent_Opinion" or defName = "ButcheredHuman_Know_Horrible_Opinion" or defName = "ButcheredHuman_Know_Disapproved_Opinion"]/stages</xpath>
        <value>
          <stages>
            <li>
              <label>suspicious of cook</label>
              <description>They are up to something shady.</description>
              <baseMoodEffect>-5</baseMoodEffect>
            </li>
          </stages>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>